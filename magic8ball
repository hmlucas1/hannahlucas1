    # List of possible answers
    answers = [
        "It is certain.",
        "It is decidedly so.",
        "Without a doubt.",
        "Yes â€“ definitely.",
        "You may rely on it.",
        "As I see it, yes.",
        "Most likely.",
        "Outlook good.",
